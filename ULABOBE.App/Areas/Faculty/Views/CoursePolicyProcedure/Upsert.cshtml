@model ULABOBE.Models.ViewModels.CoursePolicyProcedureVM
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Course Policy Procedure";
}

<link href="~/lib/Chosen/chosen.min.css" rel="stylesheet" />
<script src="~/lib/Chosen/chosen.jquery.min.js"></script>

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        @if (Model.CoursePolicyProcedure.Id != 0)
        {

            <input type="hidden" asp-for="CoursePolicyProcedure.Id" />
            <input type="hidden" asp-for="CoursePolicyProcedure.QueryId" />
            <input type="hidden" asp-for="CoursePolicyProcedure.CreatedBy" />
            <input type="hidden" asp-for="CoursePolicyProcedure.CreatedIp" />
            <input type="hidden" asp-for="CoursePolicyProcedure.CreatedDate" />
            <input type="hidden" asp-for="CoursePolicyProcedure.UpdatedBy" />
            <input type="hidden" asp-for="CoursePolicyProcedure.UpdatedDate" />
            <input type="hidden" asp-for="CoursePolicyProcedure.UpdatedIp" />
            //edit
            title = "Edit Course Policy Procedure";
        }
        else
        {
            <input type="hidden" asp-for="CoursePolicyProcedure.IsDeleted" value="false" />
            <input type="hidden" asp-for="CoursePolicyProcedure.CreatedBy" value="000000" />
            <input type="hidden" asp-for="CoursePolicyProcedure.CreatedIp" value="0.0.0.0" />
            <input type="hidden" asp-for="CoursePolicyProcedure.UpdatedBy" value="000000" />
            <input type="hidden" asp-for="CoursePolicyProcedure.UpdatedIp" value="0.0.0.0" />
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
            <h4 class="text-danger">@ViewBag.Message</h4>

        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    Instructor
                </div>
                <div class="col-8">
                    <b>@ViewBag.InstructorInfo</b>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Semester
                </div>
                <div class="col-8">
                    <b>@ViewBag.Semester</b>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Course
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.CoursePolicyProcedure.CourseHistoryId, Model.CourseHistoryLists, "-Select a Course",
                        new { @class = "form-control" })
                    <span asp-validation-for="CoursePolicyProcedure.CourseHistoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Policy Type
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.CoursePolicyProcedure.CPolicyTypeIdId, Model.CoursePolicyTypeLists, "-Select a Policy Type",
                        new { @class = "form-control" })
                    <span asp-validation-for="CoursePolicyProcedure.CPolicyTypeIdId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CoursePolicyProcedure.Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="CoursePolicyProcedure.Description" class="form-control"></textarea>
                    <span asp-validation-for="CoursePolicyProcedure.Description" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.CoursePolicyProcedure.Id != 0)
                    {

                        <partial name="_EditAndBackToListButton" model="Model.CoursePolicyProcedure.Id" />
                    }
                    else
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" onclick="return validateInput()" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col col-lg-12"><br /><br /></div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/ts0708avjz6hbhhzi12375edn6ln2fznt4nkp6jvmtfaiky1/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

    <script>

        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });



    </script>
}