@model ULABOBE.Models.Term

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Level-Term";
}


<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        @if (Model.Id != 0)
        {
            @Html.HiddenFor(model => model.Id);
            @Html.HiddenFor(model => model.QueryId);
            @Html.HiddenFor(model => model.CreatedBy);
            @Html.HiddenFor(model => model.CreatedDate);
            @Html.HiddenFor(model => model.CreatedIp);
            //edit
            title = "Edit Level-Term";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Level"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Level" class="form-control" />
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>
            </div>
            
            

            <input type="hidden" asp-for="CreatedBy" class="form-control" value="423036" />
            <input type="hidden" asp-for="CreatedIp" class="form-control" value="423036" />
            <input type="hidden" asp-for="UpdatedBy" class="form-control" value="423036" />
            <input type="hidden" asp-for="UpdatedIp" class="form-control" value="423036" />

            
            <br />
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {

                        <partial name="_EditAndBackToListButton" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}