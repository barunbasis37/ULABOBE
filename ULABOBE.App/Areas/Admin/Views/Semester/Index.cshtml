@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Semester List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Semester</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr class="table-info">
            <th>ID</th>
            <th>Semester</th>
            <th>Code</th>
            <th>Level</th>
            <th>Year</th>
            <th>Start Date</th>
            <th>Start Date</th>
            <th>Action</th>
        </tr>
        </thead>
    </table>
</div>

@section Scripts{

    <script src="~/js/semester.js"></script>
}